server {
	listen 80;
	# TODO: "ipv6only=on" entfernen, sobald auf allen UGW-Servern nginx >= 1.3.4 vorhanden ist
	#       (vor v1.3.4 hing ipv6only von den System-Einstellungen ab)
	listen [::]:80 ipv6only=on;

	server_name {{ short_hostname }}.opennet-initiative.de;
	server_name {{ short_hostname }}.on-i.de;
	server_name {{ short_hostname }}.on;

	root /var/www;

	# der vpnstatus ist die typische Information jedes UGW-Knotens
	location = / {
		return 302 /vpnstatus/;
	}

	access_log off;
}
