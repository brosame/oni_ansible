  - "http://{{ olsr_main_ip }}:80|tcp|public-domain-http luftdaten.rostock.freifunk.net"
  - "http://{{ olsr_main_ip }}:80|tcp|public-domain-http luftdaten.schwerin.freifunk.net"
  - "http://{{ olsr_main_ip }}:80|tcp|public-domain-http luftdaten.wismar.freifunk.net"
  - "https://{{ olsr_main_ip }}:443|tcp|public-domain-https luftdaten.opennet-initiative.de"
  - "https://{{ olsr_main_ip }}:443|tcp|public-domain-https luftdaten.on-i.de"
  - "https://{{ olsr_main_ip }}:443|tcp|public-domain-https luftdaten.rostock.freifunk.net"
  - "https://{{ olsr_main_ip }}:443|tcp|public-domain-https luftdaten.schwerin.freifunk.net"
